{
  "name": "@logicalhq/commitlint-config",
  "version": "1.1.0",
  "author": "Logical <hi@logical.work>",
  "license": "MIT",
  "description": "The shareable commitlint config we use at Logical.",
  "files": [
    "data/**",
    "index.js",
    "LICENSE.md",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/logicalhq/commitlint-config.git"
  },
  "bugs": {
    "url": "https://github.com/logicalhq/commitlint-config/issues"
  },
  "homepage": "https://github.com/logicalhq/commitlint-config#readme",
  "keywords": [
    "commintlint-config"
  ],
  "scripts": {
    "fmt": "prettier --write \"./**/*.{js,json,md}\"",
    "fmt:check": "prettier --list-different \"./**/*.{js,json,md}\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:spelling": "cspell --config=.cspell.json \"**/*.{md,js}\"",
    "precommit": "yarn lint-staged",
    "prepush": "yarn fmt:check",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/lint": "^12.0.1",
    "@logicalhq/eslint-config-base": "^1.0.2",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">=12"
  },
  "resolutions": {
    "**/lodash": "^4.17.19",
    "**/dot-prop": "^5.2.0"
  }
}
